@using Microsoft.AspNet.Identity
@using ProgressTracker.Models

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                
                @Html.ActionLink("Hello " + User.FullName() + "", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Register<b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li class="ours">@Html.ActionLink("Student", "RegisterStudent", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                <li class="ours">@Html.ActionLink("Supervisor", "RegisterSupervisor", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>

            </ul>
        </li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
