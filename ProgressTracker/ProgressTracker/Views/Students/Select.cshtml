@model ProgressTracker.Models.AspNetUser

@{
    ViewBag.Title = "Select";
}

<h2>Select</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("Supervisor", new SelectList(ViewBag.Students, "Name", "Name"))
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Assign" onclick="location.href='@Url.Action("Select", "Students")'" />
                @*   <input type="submit" value="Assign" class="btn btn-default" />*@
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
