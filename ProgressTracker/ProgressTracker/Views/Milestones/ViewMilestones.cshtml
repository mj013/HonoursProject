@model IEnumerable<ProgressTracker.Models.Milestone>

@{
    ViewBag.Title = "View Milestones";
}

<h2>Milestones</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration) <p>(Day(s))</p>
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.ProjectNumber)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.Type)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.ParentId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Progress)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.StudentNumber)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.Student.Course)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.ProjectNumber)
        </td>*@
        @*<td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParentId)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Progress)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.StudentNumber)
        </td>*@
        @*<td>
            @Html.DisplayFor(modelItem => item.Student.Course)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
